<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:background="@drawable/back"

    tools:context="com.Alatheer.marmy.UI.Loogin">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="10dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="90dp"
            android:gravity="center"

            android:id="@+id/edt_user_name"
            android:background="@drawable/name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"            android:layout_height="50dp"
            android:id="@+id/edt_user_pass"
            android:paddingLeft="20dp"
            android:paddingRight="90dp"
            android:gravity="center"


            android:inputType="textPassword"
            android:background="@drawable/password"/>



        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnlogin"
            android:background="@drawable/sign"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/login_fragment_signuptv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_sign"
                android:textColor="#fff"
                android:textSize="12sp"
                android:clickable="true"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                android:textColor="#d4ec4a"
                android:id="@+id/txtsignup"
                android:textSize="12sp"
                android:clickable="true"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="left"
                android:gravity="left"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
